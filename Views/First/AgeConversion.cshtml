@model double

@{
    ViewBag.Title = "AgeConversion";
}
    <div style="background-color: #08415C">
        <p>/</p>
        <h1>Age Converter</h1>
        <h3 style="text-align: center">Matthew Chiang</h3>
        <p>/</p>
    </div>
    <div>
        <h2 style="text-align: center">1 Year to 7 Dog Years</h2>
    </div>
    <div class="row">

        <div class="col-md-2">

        </div>
        <div class="col-md-8" style="text-align: center">
            <form action="ConvertAge" method="post">
                <p>Enter your age: <input style="background-color: white" name="inputAge" type="number" step="any" placeholder="Age" /></p>
                <input class="btn btn-convert" name="submit" type="submit" />
            </form>
            <p>
                Your age in Dog Years is: @Model
            </p>
        </div>
    </div>
    <div>
        <a href="index" class="btn btn-nav">Back</a>
    </div>
